<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.app.nevada.nevadaapp.AccountSubCustomer">

    <TextView
        android:id="@+id/cus_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:text="الرصيد المرحل للمالية"
        android:textColor="#2a6496"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cus_acc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:text="الرصيد المرحل للمالية"
        android:textColor="#2a6496"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="0.1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_balance_transfered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:text=""
                android:textColor="#2a6496"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/work_orders_closed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:text=""
                android:gravity="right"
                android:textColor="#2a6496"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/work_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:text=""
                android:gravity="right"
                android:textColor="#2a6496"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/endbalance_customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:text=""
                android:gravity="right"
                android:textColor="#2a6496"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="8dp"

                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:text="@string/Balance_Transferred_To_Accounting"
                android:textColor="#2a6496"
                android:textStyle="bold"


                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:text="@string/Closed_Work_Orders"
                android:textColor="#2a6496"
                android:textStyle="bold"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Work_orders"
                android:layout_marginRight="8dp"
                android:textColor="#2a6496"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/end_balance"
                android:textColor="#2a6496"
                android:layout_marginRight="8dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginTop="10dp"
        android:background="#2a6496"
        android:paddingRight="5dp"
        android:text="@string/the_details"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="140dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/corners_border"

            android:onClick="Workorders"
            android:text="@string/Work_orders"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/view_daily_row_text_size"
            android:textStyle="bold" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/corners_border"
            android:onClick="ClosedWorkOrders"
            android:text="@string/Closed_Work_Orders"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/view_daily_row_text_size"

            android:textStyle="bold" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/corners_border"
            android:onClick="goTobalanceactivity"
            android:text="@string/Balance_Transferred"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/view_daily_row_text_size"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>