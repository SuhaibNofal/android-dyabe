<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:gravity="left"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/lblDNote"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="left"
            android:text="Notes:"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txtDNote"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="left"
            android:text="وصول مادة غير المطلوبة مع كمية خاطئة"
            android:inputType="textMultiLine"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:gravity="left"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/lblDLate"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Driver Form Rating :"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txtDLate"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="-"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:gravity="left"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/lblDQNG"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="The style of the driver:"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txtDQNG"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="-"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/lblDING"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"

            android:text="Arrival time:"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txtDING"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="-"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"/>

    </LinearLayout>
</LinearLayout>

