<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="تأكيد"
        android:layout_alignParentLeft="true"
        android:id="@+id/btnConfirmOrder"
        android:background="@drawable/corners_border_small"
        android:onClick="UpdateFinished"
        android:gravity="center"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_weight="1"
        android:enabled="true" />

    <TextView
        android:id="@+id/lblConfirmQty"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:gravity="center"
        android:text="20"
        android:layout_weight="1" />
    <TextView
        android:id="@+id/lblConfirmItem"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:gravity="center"
        android:text="ينزين 95"
        android:layout_weight="2" />
    <TextView
        android:id="@+id/lblConfirmOrderNo"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:text="7228356817"
        android:gravity="center"
        android:textStyle="bold" />
</LinearLayout>