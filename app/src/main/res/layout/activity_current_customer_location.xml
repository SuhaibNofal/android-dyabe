<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.nevada.nevadaapp.CurrentCustomerLocation">
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></fragment>


    <Button
        android:id="@+id/btnStartTrip"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contactText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@color/colorPrimary"
        android:enabled="true"
        android:onClick="StartTrip"
        android:text="@string/start"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:background="#ffffff"
        android:textColor="@color/colorPrimary"
        android:gravity="right"
        android:id="@+id/txtCustomerLocation"
        android:textSize="15sp"
        android:paddingRight="5dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:onClick="GoToCustomerLocation"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="25dp" />

    <Button style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnSatView"
        android:onClick="SetSatView"
        android:textSize="20sp"
        android:visibility="invisible"
        android:textStyle="bold"
        android:layout_marginTop="380dp"
        android:background="@drawable/satview"
        android:enabled="true" />

    <Button style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnStreetView"
        android:onClick="SetStreetView"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible"
        android:layout_marginTop="435dp"
        android:background="@drawable/streetview"
        android:layout_below="@+id/btnSatView"
        android:enabled="true" />

    <Button style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnTrafficView"
        android:onClick="SetTrafficView"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="490dp"
        android:visibility="invisible"
        android:background="@drawable/trafficview"
        android:layout_below="@+id/btnSatView"
        android:enabled="true" />

    <Button style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnRefreshLocation"
        android:onClick="RefreshLocation"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="325dp"
        android:background="@drawable/refreshmap"
        android:enabled="true" />

    <Button
        android:id="@+id/goTogoogleMap"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/google"
        android:drawablePadding="2dp"

        android:enabled="true"
        android:onClick="gotogoogleMap"
        android:text="@string/go_to_google"
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_margin= "5dp"
        android:layout_gravity="bottom"/>




</FrameLayout>