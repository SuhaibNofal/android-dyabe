<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/tab1_main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/tab1_InfoLabelsLayout"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            >
            <TextView
                android:id="@+id/tab1_lblAccNo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="رقم الحساب"
                android:textColor="#2a6496"
                android:textSize="20sp"
                android:textStyle="normal|bold"
                android:layout_marginTop="20dp"
                android:gravity="right" />
            <TextView
                android:id="@+id/tab1_lblAccFinalBalance"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="الرصيد النهائي"
                android:textColor="#2a6496"
                android:textSize="20sp"
                android:layout_below="@+id/tab1_lblAccNo"
                android:textStyle="normal|bold"
                android:layout_marginTop="20dp"
                android:gravity="right" />
            <TextView
                android:id="@+id/tab1_lblAccDate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="تاريخ انشاء الحساب"
                android:textColor="#2a6496"
                android:textSize="20sp"
                android:layout_below="@+id/tab1_lblAccFinalBalance"
                android:textStyle="normal|bold"
                android:layout_marginTop="20dp"
                android:gravity="right" />
            <TextView
                android:id="@+id/tab1_lblStartBalance"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="الرصيد الافتتاحي"
                android:textColor="#2a6496"
                android:textSize="20sp"
                android:layout_below="@+id/tab1_lblAccDate"
                android:textStyle="normal|bold"
                android:layout_marginTop="20dp"
                android:gravity="right" />
            <TextView
                android:id="@+id/tab1_lblTranTypes"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="انواع الحركات"
                android:textColor="#2a6496"
                android:textSize="20sp"
                android:layout_below="@+id/tab1_lblStartBalance"
                android:textStyle="normal|bold"
                android:layout_marginTop="20dp"
                android:gravity="right" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/tab1_InfodataLayout"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tab1_lblAccNoData"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#2a6496"
                android:textSize="20sp"
                android:textStyle="normal|bold"
                android:layout_marginTop="20dp"
                android:gravity="right" />
            <TextView
                android:id="@+id/tab1_lblAccFinalBalanceData"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#2a6496"
                android:textSize="20sp"
                android:layout_below="@+id/tab1_lblAccNoData"
                android:textStyle="normal|bold"
                android:layout_marginTop="20dp"
                android:gravity="right" />
            <TextView
                android:id="@+id/tab1_lblAccDateData"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#2a6496"
                android:textSize="20sp"
                android:layout_below="@+id/tab1_lblAccFinalBalanceData"
                android:textStyle="normal|bold"
                android:layout_marginTop="20dp"
                android:gravity="right" />
            <TextView
                android:id="@+id/tab1_lblStartBalanceData"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#2a6496"
                android:textSize="20sp"
                android:layout_below="@+id/tab1_lblAccDateData"
                android:textStyle="normal|bold"
                android:layout_marginTop="20dp"
                android:gravity="right" />
            <TextView
                android:id="@+id/tab1_lblTranTypesData"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#2a6496"
                android:textSize="20sp"
                android:layout_below="@+id/tab1_lblStartBalanceData"
                android:textStyle="normal|bold"
                android:layout_marginTop="20dp"
                android:gravity="right" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>