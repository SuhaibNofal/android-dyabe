<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RatingBar
        android:id="@+id/simpleRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:numStars="5"
        android:stepSize="1"
        android:theme="@style/RatingBar"
        />
    <EditText
        android:id="@+id/ratingMessage"
        android:layout_height="wrap_content"
        android:layout_width="250dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:lines="4"
        android:inputType="textMultiLine"
        android:textSize="13sp"
        android:hint="الملاحظات"
        android:textStyle="bold"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:gravity="right"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtLate"
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:text=" تأخر في وصول الطلبية"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"/>
        <CheckBox android:id="@+id/chkLate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="right"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtNotGoodQty"
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:text="الكمية غير مطابقة"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"/>
        <CheckBox android:id="@+id/chkNotGoodQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="right"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtNotGoodItem"
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:text="المادة غير مطابقة"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"/>
        <CheckBox android:id="@+id/chkNotGoodItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="تقييم"
        android:layout_alignParentLeft="true"
        android:id="@+id/btnRate"
        android:background="@drawable/corners_border_small"
        android:onClick="UpdateFinished"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:enabled="true" />
</LinearLayout>